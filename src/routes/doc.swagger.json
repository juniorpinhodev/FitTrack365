{
  "swagger": "2.0",
  "info": {
    "title": "API FitTrack365",
    "description": "API para o projeto FitTrack365",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "securityDefinitions": {
    "BearerAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "Authorization",
      "description": "Token JWT para autenticação. Exemplo: 'Bearer {token}'"
    }
  },
  "paths": {
    "/login": {
      "post": {
        "summary": "Login e obtenção do token JWT",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Token JWT gerado com sucesso",
            "schema": {
              "$ref": "#/definitions/Token"
            }
          },
          "401": {
            "description": "Credenciais inválidas"
          }
        }
      }
    },
    "/usuario": {
      "post": {
        "summary": "Criação de novo usuário",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso",
            "schema": {
              "$ref": "#/definitions/UserResponse"
            }
          },
          "400": {
            "description": "Erro de validação"
          },
          "409": {
            "description": "Conta ou CPF já existe"
          },
          "500": {
            "description": "Erro no servidor"
          }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "Lista de usuários",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de usuários"
          },
          "401": {
            "description": "Token inválido ou expirado"
          }
        }
      }
    }
  },
  "definitions": {
    "Login": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "senha": {
          "type": "string"
        }
      },
      "required": ["email", "senha"]
    },
    "Token": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "nome": {
          "type": "string"
        },
        "sexo": {
          "type": "string",
          "enum": ["Masculino", "Feminino", "Outro"]
        },
        "cpf": {
          "type": "string"
        },
        "endereco": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "senha": {
          "type": "string"
        },
        "data_nascimento": {
          "type": "string",
          "format": "date"
        }
      },
      "required": ["nome", "sexo", "cpf", "email", "senha", "data_nascimento"]
    },
    "UserResponse": {
      "type": "object",
      "properties": {
        "nome": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
